<h1>Edit a Book</h1>
<br />
<%= simple_form_for @book do |f| %>
  <%= f.input :title %>
  <%= f.input :author %>
  <%= f.input :genre %>
  <%= f.input :classification %>
  <%= f.input :booktype, label: 'Type of Book' %>
  <%= f.input :year, label: 'Year Published' %>
  <%= f.submit 'Update' %>
<% end %>